class Solution {
    
    public static long pairWithMaxSum(long arr[], long N)
    {
        // Your code goes here
      long maxSum = Long.MIN_VALUE;
   
        
        for(int i=0;i<arr.length-1;i++)
        {
             long sum=arr[i]+arr[i+1];
    
            maxSum=Math.max(maxSum,sum);
        }
        
        return maxSum;
    }
}

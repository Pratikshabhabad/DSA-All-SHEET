class Solution {
    public int numOfSubarrays(int[] arr, int k, int threshold) {
        
        int sum=0;
        int cnt=0;
        int avgSum=k*threshold;

        for(int i=0;i<k;i++)
        {
            sum+=arr[i];
        }

        if(sum >= avgSum)
        {
            cnt++;
        }

        for(int i=k;i<arr.length;i++)
        {
            sum+=arr[i]-arr[i-k];
            if(sum>=avgSum)
            {
                cnt++;
            }
        }

        return cnt;
    }
}
